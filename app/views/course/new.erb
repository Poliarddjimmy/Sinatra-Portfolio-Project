<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <br>
    </div>
    <div class="col-sm-8" style=" margin-top:-10%%;  background-color:rgba(255,255,255,0.00001);box-shadow:rgba(255,255,255,0.00001) 0px 0px 0px;" >
        <div class="form-style-10 prinska" style="margin: 0 auto;">

           <form id="" action="/course/new" method="post">
                <style>
                .input-group-addon{width:100px;}
                .kk{min-width:250px;}
                </style>

                <div class="inner-wrap">

                    <label>Name
                        <input id="titre1" name="cours_name" value="" style="width:; border:rgba(255,255,255,0.00001) solid 1px; border-radius:0px;" class="form-control titre" type="text" placeholder="Ajouter le nom du cours">
                        <!--<input id="" name="user_id" value="<%= @user.id %>" type="hidden">-->
                    </label>


                    <label>Description
                        <textarea id="summernote" name="cours_description" value="" style="width:; resize: vertical; min-height:50px; border:rgba(255,255,255,0.00001) solid 1px;" class="form-control para1" type="text" placeholder="Votre paragraphe ici"></textarea>
                    </label>



                    <button type="submit"  class="dark pull-right button" style="margin-right:10px;margin-top:;">
                      Soumettre
                    </button>
                    <br>

                </div>

            </form>

          <script type="text/javascript">
            $(document).ready(function() {
              // submit form using $.ajax() method
              $('#addc').submit(function(e){
                e.preventDefault(); // Prevent Default Submission
                $.ajax({
                  url: '/ajouter/cours/',
                  type: 'POST',
                  data: $(this).serialize() // it will serialize the form data
                })
                  .done(function(data){
                  $('#addc').fadeOut('slow', function(){
                    $('#addc').fadeIn('slow').html(data);
                  });
                })
                  .fail(function(){
                  alert('Ajax Submit Failed ...');
                });
              });
            });
          </script>

        </div>
      </div>

      <div class="col-sm-2">
        <br>
      </div>

  </div>
</div>

